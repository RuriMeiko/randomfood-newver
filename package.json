{
  "private": true,
  "name": "randomfood-vps",
  "version": "2.0.0",
  "description": "Telegram Bot running on VPS with Bun + Express",
  "scripts": {
    "dev": "npx tsx watch --env-file=.env src/server.ts",
    "start": "node --env-file=.env build/index.mjs",
    "build": "npx tsx --env-file=.env src/server.ts",
    "types": "tsc --noEmit --skipLibCheck",
    "docker:build": "docker build -t telegram-bot .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:init": "./init-db.sh",
    "upload-keys": "bun run scripts/upload-keys.ts",
    "test:emotions": "bun run scripts/test-emotions.ts",
    "test:responses": "bun run scripts/test-responses.ts",
    "test:webhook": "bun run scripts/test-webhook.ts",
    "test:webhook:happy": "tsx scripts/test-webhook.ts happy --suite",
    "test:webhook:sad": "tsx scripts/test-webhook.ts sad --suite",
    "test:webhook:angry": "tsx scripts/test-webhook.ts angry --suite",
    "test:webhook:hurt": "tsx scripts/test-webhook.ts hurt --suite",
    "test:webhook:anxious": "tsx scripts/test-webhook.ts anxious --suite",
    "test:webhook:pouty": "tsx scripts/test-webhook.ts pouty --suite",
    "test:webhook:jealous": "tsx scripts/test-webhook.ts jealous --suite",
    "test:webhook:clingy": "tsx scripts/test-webhook.ts clingy --suite",
    "test:webhook:loving": "tsx scripts/test-webhook.ts loving --suite",
    "test:webhook:playful": "tsx scripts/test-webhook.ts playful --suite",
    "test:emotion:happy": "tsx scripts/test-emotions.ts sql happy",
    "test:emotion:sad": "tsx scripts/test-emotions.ts sql sad",
    "test:emotion:angry": "tsx scripts/test-emotions.ts sql angry",
    "test:emotion:hurt": "tsx scripts/test-emotions.ts sql hurt",
    "test:emotion:anxious": "tsx scripts/test-emotions.ts sql anxious",
    "test:emotion:pouty": "tsx scripts/test-emotions.ts sql pouty",
    "test:emotion:jealous": "tsx scripts/test-emotions.ts sql jealous",
    "test:emotion:clingy": "tsx scripts/test-emotions.ts sql clingy",
    "test:emotion:loving": "tsx scripts/test-emotions.ts sql loving",
    "test:emotion:playful": "tsx scripts/test-emotions.ts sql playful",
    "test:emotion:neutral": "tsx scripts/test-emotions.ts sql neutral",
    "test:emotion:reset": "tsx scripts/test-emotions.ts reset",
    "emotion:happy": "tsx scripts/set-emotion.ts happy",
    "emotion:sad": "tsx scripts/set-emotion.ts sad",
    "emotion:angry": "tsx scripts/set-emotion.ts angry",
    "emotion:hurt": "tsx scripts/set-emotion.ts hurt",
    "emotion:anxious": "tsx scripts/set-emotion.ts anxious",
    "emotion:pouty": "tsx scripts/set-emotion.ts pouty",
    "emotion:jealous": "tsx scripts/set-emotion.ts jealous",
    "emotion:clingy": "tsx scripts/set-emotion.ts clingy",
    "emotion:loving": "tsx scripts/set-emotion.ts loving",
    "emotion:playful": "tsx scripts/set-emotion.ts playful",
    "emotion:neutral": "tsx scripts/set-emotion.ts neutral",
    "emotion:default": "bun run scripts/set-emotion.ts default"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@google/genai": "^1.28.0",
    "@google/generative-ai": "^0.15.0",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "express": "^4.18.2"
  }
}
