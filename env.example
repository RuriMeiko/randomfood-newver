# To add API keys:
# 1. Run migrations/init-api-keys.sql
# 2. Insert keys: 
#    INSERT INTO api_keys (key_name, api_key, rpm_limit, rpd_limit, is_active)
#    VALUES ('primary', 'AIza...', 5, 20, TRUE);
